{
  "manifest_version": 3,
  "name": "LeetCode Copilot",
  "version": "0.6.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "description": "An AI-powered Chrome extension to help understand LeetCode problems with rephrasing, constraints, hints, and a scratchpad.",
  "options_page": "options.html",
  "permissions": ["storage","scripting", "activeTab"],
  "host_permissions": [
    "https://leetcode.com/**",
    "https://leetcode.cn/**"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://leetcode.com/problems/*",
        "https://leetcode.cn/problems/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
